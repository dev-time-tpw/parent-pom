			<!-- ==================== -->
			<!-- Testing dependencies -->
			<!-- ==================== -->
			<!-- It is only for test libraries in DependencyManagement that the scope test is explicitly specified. -->
			<!-- For all other dependencies the scope has to be set in the using modules! -->
			<!-- @see: https://stackoverflow.com/questions/15221299/dependencymanagement-and-scope -->

			<!-- awaitility: Useful utils to test asynchrony services (fluent notation supported) -->
			<dependency>
				<groupId>org.awaitility</groupId>
